<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <!-- Walk icon with kopitiam styling -->
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="ðŸš¶"
        android:textSize="24sp"
        android:gravity="center"
        android:background="@drawable/circle_background" />

    <!-- Session details with kopitiam colors -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tvSpot"
            android:text="Void Deck 123"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#6B4423"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTime"
            android:text="2025-09-20 10:12"
            android:textColor="#8B5A3C"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:textColor="#9B7B5B"
            android:layout_marginTop="4dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Points with kopitiam colors -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvPointsRow"
            android:text="+5"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#D4A574"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="points"
            android:textSize="12sp"
            android:textColor="#9B7B5B" />
    </LinearLayout>
</LinearLayout>