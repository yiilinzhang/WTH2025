<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E6D3"
    android:fitsSystemWindows="true">

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:text="â†"
        android:textSize="24sp"
        android:textStyle="bold"
        android:backgroundTint="#6B4423"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Main Content Container with proper spacing -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/backButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Session"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#4A4A4A"
            android:layout_marginBottom="48dp" />

        <!-- QR Icon Container with rounded corners -->
        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#D4A574"
            android:layout_marginBottom="48dp">

            <ImageView
                android:id="@+id/qrIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_camera"
                android:padding="30dp"
                android:scaleType="fitCenter" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/scanQrButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="32dp"
            android:text="SCAN QR CODE TO JOIN"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:backgroundTint="#8B4513"
            android:layout_marginBottom="32dp"
            app:cornerRadius="32dp" />

        <TextView
            android:id="@+id/infoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Look for QR codes posted in\ncoffee shops, parks, and walking trails"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:layout_marginHorizontal="24dp" />

        <!-- Bottom spacing to prevent content from being too close to bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="48dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>