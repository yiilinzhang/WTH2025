<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E6D3">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🚶‍♀️ Schedule a Walking Session 🚶‍♂️"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#6B4423"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Invite others to join your walking session"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textColor="#8B5A3C"
                android:layout_marginBottom="24dp" />

            <!-- Create Walk Form -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Location Selection - Simplified -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📍 Where to walk?"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#6B4423"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="24dp">

                        <Button
                            android:id="@+id/btnEastCoast"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="🌊 East Coast Park"
                            android:textSize="18sp"
                            android:backgroundTint="#E8D4C1"
                            android:textColor="#6B4423"
                            app:cornerRadius="12dp"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/btnBotanic"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="🌺 Botanic Gardens"
                            android:textSize="18sp"
                            android:backgroundTint="#E8D4C1"
                            android:textColor="#6B4423"
                            app:cornerRadius="12dp"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/btnBishan"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="🌳 Bishan Park"
                            android:textSize="18sp"
                            android:backgroundTint="#E8D4C1"
                            android:textColor="#6B4423"
                            app:cornerRadius="12dp" />
                    </LinearLayout>

                    <!-- When to walk? - Simplified -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📅 When to walk?"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#6B4423"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="24dp">

                        <Button
                            android:id="@+id/btnTomorrowMorning"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:text="🌅 Tomorrow Morning (7 AM)"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:backgroundTint="#E8D4C1"
                            android:textColor="#6B4423"
                            app:cornerRadius="12dp"
                            android:layout_marginBottom="12dp" />

                        <Button
                            android:id="@+id/btnTomorrowEvening"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:text="🌆 Tomorrow Evening (6 PM)"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:backgroundTint="#E8D4C1"
                            android:textColor="#6B4423"
                            app:cornerRadius="12dp"
                            android:layout_marginBottom="12dp" />

                        <Button
                            android:id="@+id/btnChooseDateTime"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="📅 Choose Different Time"
                            android:textSize="16sp"
                            android:backgroundTint="#D4A574"
                            android:textColor="@android:color/white"
                            app:cornerRadius="12dp" />
                    </LinearLayout>

                    <!-- Simple message about group size -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="👥 Perfect for 4-6 walking kakis!"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textColor="#8B5A3C"
                        android:padding="16dp"
                        android:background="#F5E6D3"
                        android:layout_marginBottom="20dp" />

                    <!-- Create Button -->
                    <Button
                        android:id="@+id/btnCreateWalk"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="🚶‍♀️ Create Walking Session 🚶‍♂️"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:backgroundTint="#8B5A3C"
                        android:textColor="@android:color/white"
                        app:cornerRadius="16dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom Decoration -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="☕ Build your walking kaki group! ☕"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#8B5A3C"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>