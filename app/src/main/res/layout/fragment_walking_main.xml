<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E6D3"
    tools:context=".ui.walking.WalkingMainFragment" >

    <!-- Kopitiam Welcome Header -->
    <TextView
        android:id="@+id/text_kopi_emoji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="☕ ☕ ☕"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Kopi Kakis Walking Club"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#6B4423"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_kopi_emoji" />

    <TextView
        android:id="@+id/text_tagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="Jalan-jalan with your friends!"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#8B5A3C"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_home" />

    <Button
        android:id="@+id/btn_join_walking_session"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="50dp"
        android:text="☕ JOIN WALKING SESSION ☕"
        android:textSize="19sp"
        android:textStyle="bold"
        android:backgroundTint="#6B4423"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_tagline" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:text="Scan QR or enter code to lim kopi and walk!"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#8B6B47"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_join_walking_session" />

    <!-- Three buttons in a row -->
    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:spacing="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_description">

        <!-- Friends Button -->
        <Button
            android:id="@+id/btn_friends"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:text="👥 MY KOPI KAKIS"
            android:textSize="19sp"
            android:textStyle="bold"
            android:backgroundTint="#8B5A3C"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Leaderboard Button -->
        <Button
            android:id="@+id/btn_leaderboard"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:text="🏆 LEADERBOARD"
            android:textSize="19sp"
            android:textStyle="bold"
            android:backgroundTint="#D4A574"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Rewards Button -->
        <Button
            android:id="@+id/btn_rewards"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:text="🎁 REWARDS"
            android:textSize="19sp"
            android:textStyle="bold"
            android:backgroundTint="#9B7B5B"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Bottom decoration -->
    <TextView
        android:id="@+id/text_bottom_decoration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="🥐 ☕ 🍞 ☕ 🥐"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_kopitiam_vibe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Your neighborhood kopitiam walking group"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#9B7B5B"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/text_bottom_decoration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>