<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E6D3">

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="←"
        android:textSize="24sp"
        android:textStyle="bold"
        android:backgroundTint="#6B4423"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="4dp" />

    <!-- Map Fragment Container -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/statsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#E0E0E0">

        <!-- Placeholder for Map - Replace with actual MapView or Fragment -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map View\n(Shows your location and friends)"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#666666" />

    </FrameLayout>

    <!-- Friend Location Indicators (overlay on map) -->
    <LinearLayout
        android:id="@+id/friendIndicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍 You"
            android:textSize="14sp"
            android:textColor="#8B4513"
            android:textStyle="bold"
            android:layout_marginEnd="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍 Friends (3)"
            android:textSize="14sp"
            android:textColor="#D2B48C" />

    </LinearLayout>

    <!-- Stats Card at Bottom -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Distance -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance"
                        android:textSize="12sp"
                        android:textColor="#888888" />

                    <TextView
                        android:id="@+id/distanceValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.2 km"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#4A4A4A"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Steps -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steps"
                        android:textSize="12sp"
                        android:textColor="#888888" />

                    <TextView
                        android:id="@+id/stepsValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2,450"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#4A4A4A"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Points -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Points"
                        android:textSize="12sp"
                        android:textColor="#888888" />

                    <TextView
                        android:id="@+id/pointsValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150 ☕"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#8B4513"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Timer Display -->
            <TextView
                android:id="@+id/sessionTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Session Time: 00:15:32"
                android:textSize="16sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp" />

            <!-- Control Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/pauseButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Pause"
                    android:textSize="16sp"
                    android:backgroundTint="#D2B48C"
                    android:layout_marginEnd="10dp" />

                <Button
                    android:id="@+id/endSessionButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="End Session"
                    android:textSize="16sp"
                    android:backgroundTint="#FF6B6B"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>