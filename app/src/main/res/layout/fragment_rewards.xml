<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E6D3"
    tools:context=".ui.rewards.RewardsFragment" >

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:id="@+id/topNavBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:background="#F5E6D3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rewards"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#6B4423"
            android:layout_marginStart="8dp" />

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Home" />
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topNavBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Points Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Your Balance"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:alpha="0.9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView android:id="@+id/tvPointsBalance"
                        android:text="0 Points"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Earn more by walking!"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:alpha="0.8"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Drink Options Title -->
            <TextView
                android:text="Redeem Your Drinks"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#6B4423"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Drink Options Grid -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Row 1: Kopi O and Hot Kopi -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <Button android:id="@+id/btnKopiO"
                        android:text="Kopi O\n50 pts"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:backgroundTint="#8B5A3C"
                        android:minHeight="80dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <Button android:id="@+id/btnHotKopi"
                        android:text="Hot Kopi\n75 pts"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:backgroundTint="#8B5A3C"
                        android:minHeight="80dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Row 2: Hot Teh and Kopi Peng -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <Button android:id="@+id/btnHotTeh"
                        android:text="Hot Teh\n75 pts"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:backgroundTint="#8B5A3C"
                        android:minHeight="80dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <Button android:id="@+id/btnKopiPeng"
                        android:text="Kopi Peng\n100 pts"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:backgroundTint="#8B5A3C"
                        android:minHeight="80dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Row 3: Teh Peng -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button android:id="@+id/btnTehPeng"
                        android:text="Teh Peng\n100 pts"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:backgroundTint="#8B5A3C"
                        android:minHeight="80dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D4A574"
                android:layout_marginBottom="16dp"/>

            <!-- Redeemed Coupons Section -->
            <TextView
                android:text="Your Kopi Coupons"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#6B4423"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/couponsContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Coupons will be added here dynamically -->
                <TextView
                    android:text="Redeem points to get kopi coupons!"
                    android:textSize="16sp"
                    android:textColor="#8B5A3C"
                    android:gravity="center"
                    android:padding="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>