<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for location tracking -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Permission for internet (Firebase) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permission for camera (QR Scanner) -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">

        <!-- LoginActivity is now the launcher -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- New Session Activities -->
        <activity
            android:name=".SessionStartActivity"
            android:exported="false"
            android:label="Start Session" />

        <activity
            android:name=".SessionDetailsActivity"
            android:exported="false"
            android:label="Session Details" />

        <activity
            android:name=".SessionDetailsActivityMock"
            android:exported="false"
            android:label="Session Details (Mock)" />

        <activity
            android:name=".SessionMapActivityOSM"
            android:exported="false"
            android:label="Walking Session"
            android:noHistory="true" />

        <activity
            android:name=".SessionCompletionActivity"
            android:exported="false"
            android:label="Session Complete"
            android:noHistory="true" />

        <activity
            android:name=".FriendsListActivity"
            android:exported="false"
            android:label="My Kopi Kakis" />

        <activity
            android:name=".ScheduledWalksActivity"
            android:exported="false"
            android:label="Walking Schedule" />

        <!-- Main activity (no launcher intent filter) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApplication.NoActionBar"
            android:launchMode="singleTask" />
    </application>

</manifest>
